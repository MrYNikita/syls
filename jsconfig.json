{
    "include": [
        "./**/*",
        "./.apps/**/*",
        "./.games/**/*",
        "./.scripts/**/*",
        "./-submodule/**/*",
    ],
    "typeAcquisition": {
        "include": [
            "node"
        ],
    },
    "compilerOptions": {
        "outDir": ".build",
        "target": "ES2022",
        "module": "NodeNext",
        "rootDir": "./",
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
    }
}