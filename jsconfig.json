{
    "include": ["./**/*", "./.modules/**/*"],
    "typeAcquisition": {
        "include": [
            "node"
        ]
    },
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "experimentalDecorators": true
    }
}